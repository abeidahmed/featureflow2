<%= render_component "template/slate" do |c| %>
  <% c.heading do %>
    Join <span class="text-highlight">Applog</span> in Feature Flow
  <% end %>

  <% c.body do %>
    <div class="box-body">
      <div class="form-group">
        <label>Full name</label>
        <input type="text" value="" name="" id="" class="form-control form-control--lg" />
      </div>

      <div class="form-group">
        <label>Email address</label>
        <input type="text" value="" name="" id="" class="form-control form-control--lg" />
      </div>

      <div class="form-group">
        <div class="form-group-header flex items-center">
          <label>Password</label>
          <span class="ml-1 text-gray">(min. 6 characters)</span>
        </div>

        <input type="text" value="" name="" id="" class="form-control form-control--lg" />
      </div>

      <div class="form-group">
        <button class="btn btn--primary btn--lg btn--block">Join account</button>
      </div>
    </div>
  <% end %>
<% end %>
