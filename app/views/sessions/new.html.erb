<main class="flex justify-center main--slate">
  <div class="w-full">
    <div class="text-center mb-2">
      <%= image_tag "logo.svg", class: "h-14 w-auto mx-auto" %>
    </div>

    <h1 class="h2 text-center">
      Sign in to your account
    </h1>

    <div class="box box--mktg mt-6 shadow-lg max-w-md w-full mx-auto">
      <div class="box-body">
        <form action="#">
          <div class="form-group">
            <label>Email address</label>
            <input type="text" value="" name="" id="" class="form-control form-control--lg" />
          </div>

          <div class="form-group">
            <div class="form-group-header flex items-center justify-between">
              <label>Password</label>
              <%= link_to "Forgot your password?", "#" %>
            </div>

            <input type="text" value="" name="" id="" class="form-control form-control--lg" />
          </div>

          <div class="form-group">
            <button class="btn btn--primary btn--block btn--lg">Sign in</button>
          </div>
        </form>
      </div>
    </div>

    <div class="mt-10">
      <p class="text-gray text-center">
        Don't have an account? <%= link_to "Sign up", new_user_path %>
      </p>
    </div>
  </div>
</main>
