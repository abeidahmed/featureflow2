<%= render_component "template/slate" do |c| %>
  <% c.heading { "Reset your password" } %>

  <% c.body do %>
    <div class="box-body">
      <p class="f5">
        After resetting your password, youâ€™ll be taken to sign in page, where you need to enter your new credentials.
      </p>

      <%= form_with model: @user, url: password_reset_path(params[:id]), data: { controller: "hotwire", action: "turbo:submit-end->hotwire#onSubmit" }, class: "mt-6" do |f| %>
        <div class="form-group">
          <div class="form-group-header flex items-center">
            <%= f.label :password %>
            <span class="ml-1 text-gray">(min. 6 characters)</span>
          </div>

          <%= f.password_field :password, class: "form-control form-control--lg", required: true %>

          <%= render_component "form/error", error_field: :password %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control form-control--lg", required: true %>

          <%= render_component "form/error", error_field: :password_confirmation %>
        </div>

        <div class="form-group">
          <%= f.submit "Reset my password", class: "btn btn--primary btn--lg btn--block" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
