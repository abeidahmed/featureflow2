<%= form_with **@options, data: { controller: "hotwire", action: "turbo:submit-end->hotwire#onSubmit" } do |f| %>
  <%= hidden_field_tag :return_url, @return_url if @return_url %>

  <div class="form-group">
    <div class="form-group-header flex items-center">
      <%= f.label :password %>
      <span class="ml-1 text-gray">(min. 6 characters)</span>
    </div>

    <%= f.password_field :password, class: "form-control form-control--lg", required: true %>

    <%= render_component "form/error", error_field: :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control form-control--lg", required: true %>

    <%= render_component "form/error", error_field: :password_confirmation %>
  </div>

  <div class="form-group">
    <%= f.submit "Reset my password", class: "btn btn--primary btn--lg btn--block" %>
  </div>
<% end %>
